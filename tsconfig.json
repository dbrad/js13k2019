{
  "compilerOptions": {
    "target": "es6",
    "plugins": [
      { 
        "name": "typescript-tslint-plugin",
        "configFile": "tslint.json",
      }
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "include": ["src/ts/**/*.ts"],
  "exclude": [".cache/**/*", "node_modules/**/*"]
}
